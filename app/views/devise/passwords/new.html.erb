<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row justify-content-md-center">
    <div class="col-md-4 pb-2">
      <fieldset class="border p-2">
        <legend  class="float-none w-auto">Reset Password</legend>
          <div class="form-group pb-2">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control" } %>
          </div>
          <div class="action col text-center">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
          </div>
          <%= render "devise/shared/links" %>
      </fieldset>
    </div>
  </div>
<% end %>


